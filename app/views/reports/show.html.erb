<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @report.content %>
</p>

<p>
  <small>User:</small>
  <%= @report.user.name %>
</p>

<p>
  <small>Posting Date:</small>
  <%= l @report.created_at, format: :short %>
</p>

<p>
  <% if @report.user == current_user %>
    <%= link_to 'Edit', edit_report_path(@report) %> |
    <%= link_to 'Destroy', @report, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>
<%= link_to 'Back', reports_path %>

<%= render 'shared/comments', commentable: @report %>
